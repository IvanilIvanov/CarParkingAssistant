@model AddParkingViewModel

<div class="parking-list">
    <form method="post">

        <h1>Add parking</h1>
        <div class="form-floating mb-3">
            <label asp-for="Address">Address</label>
            <span asp-validation-for="Address" class="text-danger"></span>
            <input asp-for="Address" class="form-control" aria-required="true" placeholder="Address" />
        </div>
        <div class="form-floating mb-3">
            <label asp-for="NumSlots">NumSlots</label>
            <span asp-validation-for="NumSlots" class="text-danger"></span>
            <input asp-for="NumSlots" class="form-control" aria-required="true" placeholder="NumSlots" type="number" />
        </div>
        <div class="form-floating mb-3">
            <label asp-for="Price">Price</label>
            <span asp-validation-for="Price" class="text-danger"></span>
            <input asp-for="Price" class="form-control" aria-required="true" placeholder="Price" type="number" />
        </div>
        <button>Submit</button>

    </form>


</div>